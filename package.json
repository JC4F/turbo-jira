{
  "name": "turbo-jira",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:fe": "turbo dev --filter=fe",
    "dev:be": "turbo dev --filter=be",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "cleandep": "rm -rf node_modules && pnpm -r exec rm -rf node_modules",
    "check-types": "turbo check-types"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.12",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.1.3",
  "engines": {
    "node": ">=18"
  }
}
