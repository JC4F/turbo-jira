{
  "extends": "@repo/typescript-config/vue.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "../../packages/ui/src/**/*.vue",
    "../../packages/ui/src/**/*.ts"
  ],
  "exclude": ["src/**/__tests__/*", "node_modules"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["../../packages/ui/src/*"]
    }
  }
}
